{
  "name": "shadow-alpha",
  "version": "0.1.0",
  "description": "Private Insider-Free Alpha Prediction Network",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter shadow-alpha-web dev",
    "build": "pnpm --filter shadow-alpha-web build",
    "start": "pnpm --filter shadow-alpha-web start",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "api": "pnpm --filter shadow-alpha-api dev",
    "dev:all": "pnpm --parallel --filter shadow-alpha-api --filter shadow-alpha-web dev"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}